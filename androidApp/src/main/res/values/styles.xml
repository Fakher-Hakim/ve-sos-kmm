<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SectionHeaderText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">@font/dcfc_standard</item>
        <item name="background">@color/primary</item>
    </style>

    <style name="CheckboxStyle" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/accentSecondary</item>
        <item name="android:fontFamily">@font/barlow_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLength">32</item>
    </style>
</resources>